@model IEnumerable<ECommercePlatform.Models.Product>

@{
    ViewData["Title"] = "首頁總覽";
}

<h1>🛒Ez購,Ez Life</h1>

<nav style="margin-bottom: 30px;">
    @* <a asp-controller="Home" asp-action="Index" style="margin-right: 20px;">🏠 回首頁</a> *@
    <a asp-controller="Account" asp-action="Login" style="margin-right: 20px;">🔑 登入/註冊</a>
    <a asp-controller="Review" asp-action="Index" style="margin-right: 20px;">💬 商品評價</a>
    <a href="#" onclick="alert('尚未實作');" style="margin-right: 20px;">👤 會員中心</a>
    <a href="#" onclick="alert('尚未實作');" style="margin-right: 20px;">🛍️ 商品管理</a>
    <a href="#" onclick="alert('尚未實作');" style="margin-right: 20px;">📦 訂單管理</a>
</nav>

<section>
    <h2>🔥 精選商品</h2>
    <div style="display: flex; gap: 20px; flex-wrap: wrap;">
        @if (Model != null && Model.Any())
        {
            foreach (var product in Model)
            {
                <div style="border: 1px solid #ccc; padding: 10px; width: 200px;">
                    <h4>@product.Name</h4>
                    <p>價格: $@product.Price</p>
                    <p>@product.Description</p>
                </div>
            }
        }
        else
        {
            <p>目前沒有可顯示的商品。</p>
        }
    </div>
</section>