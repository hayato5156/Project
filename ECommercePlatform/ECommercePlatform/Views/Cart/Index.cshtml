@model IEnumerable<ECommercePlatform.Models.CartItem>

<h2>購物車</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">您的購物車目前是空的。</div>
}
else
{
    <form method="post" asp-action="Update" asp-controller="Cart">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>商品</th>
                    <th>單價</th>
                    <th>數量</th>
                    <th>小計</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@item.Product.Price.ToString("C")</td>
                        <td>
                            <form method="post" action="/Cart/Update">
                                <input type="hidden" name="id" value="@item.Id" />
                                <input type="number" name="quantity" value="@item.Quantity" class="form-control" min="1" style="width:80px;" />
                                <button type="submit" class="btn btn-sm btn-info mt-1">更新</button>
                            </form>
                        </td>
                        <td>@(item.Product.Price * item.Quantity).ToString("C")</td>
                        <td><a class="btn btn-sm btn-danger" href="/Cart/Remove/@item.Id">刪除</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/Order/Checkout" class="btn btn-success">前往結帳</a>
    </form>
}
